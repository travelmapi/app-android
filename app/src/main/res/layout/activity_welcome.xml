<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.travelmapi.app.travelmapi_app.WelcomeActivity">
    <TextView
        android:id="@+id/activity_welcome_textview_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_above="@id/activity_welcome_textview_loading"
        android:layout_marginBottom="60dp"
        android:layout_margin="@dimen/activity_horizontal_margin"/>
    <ProgressBar
        android:id="@+id/activity_welcome_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_welcome_textview_loading"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="v. Alpha 1.0"
        android:layout_below="@id/activity_welcome_progress_bar"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INTERNET IDEAS LTD Â© 2006 - 2016"
        style="@style/AppTheme.CopyWrite"/>
</RelativeLayout>
