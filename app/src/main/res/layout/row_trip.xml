<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<CheckBox
    android:id="@+id/row_trip_checkbox_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/row_trip_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Label"
        android:layout_toEndOf="@id/row_trip_checkbox_delete"
        tools:text="1. Trip"
        />
    <TextView
        android:id="@+id/row_trip_textview_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/row_trip_textview_title"
        android:layout_alignBaseline="@id/row_trip_textview_title"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        tools:text="Inactive"/>
    <TextView
        android:id="@+id/row_trip_textview_logs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/row_trip_textview_active"
        android:layout_alignBaseline="@id/row_trip_textview_active"
        tools:text="1540 Logs"/>
    <TextView
        android:id="@+id/row_trip_textview_dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_trip_textview_title"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        tools:text="From 25-12-2016 10:30:00 to 25-12-2016 14:30:00"/>
</RelativeLayout>