<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.travelmapi.app.travelmapi_app.DateTimeDialogFragment">

    <DatePicker
        android:id="@+id/fragment_date_time_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TimePicker
        android:id="@+id/fragment_date_time_time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <Button
    android:id="@+id/fragment_date_time_button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_below="@id/fragment_date_time_date_picker"
        style="@style/AppTheme.Button"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <LinearLayout
        android:id="@+id/fragment_date_time_linear_layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_date_time_time_picker"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:visibility="gone">
        <Button
            android:id="@+id/fragment_date_time_button_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Back"
            style="@style/AppTheme.Button"/>
        <Button
            android:id="@+id/fragment_date_time_button_finish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Finish"
            style="@style/AppTheme.Button"/>
    </LinearLayout>

</RelativeLayout>
