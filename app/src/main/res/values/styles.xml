<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name = "NoActionBar" parent = "Theme.AppCompat.DayNight.NoActionBar">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Title" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="AppTheme.Label">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AppTheme.EditText">
        <item name="android:background">@drawable/bordered_background</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.EditText.Button">
    </style>
    <style name="AppTheme.Button">
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:height">18dp</item>
    </style>
    <style name="AppTheme.MenuButton">
        <item name="android:background">@drawable/bordered_background</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="AppTheme.MenuButton.Active">
        <item name="android:background">@drawable/bordered_background_active</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AppTheme.Stamp">
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="AppTheme.Stamp.Header">

    </style>
    <style name="AppTheme.TimeStamp" >
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>
    <style name="AppTheme.CopyWrite">
        <item name="android:textColor">#57AABB</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

</resources>
